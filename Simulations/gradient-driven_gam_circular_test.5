  tau0                       = 1.
  A0                         = 1.
  Z0                         = 1.
  As                         = 1.
  Zs                         = 1.
  species_frac               = 1.
  read_ns0                   = .false.
  read_Ts0                   = .false.
  read_q                     = .false.
  read_Vpars0                = .false.
  profile_choice             = 1 
  magnet_strategy            = "CIRCULAR"
  rpeak                      = 0.5
  kappa_ns0                  = 0.0000001
  kappa_Ts0                  = 0.0000001
  deltar_ns0                 = 0.2
  deltar_Ts0                 = 0.1
  Vpars0                     = 0.
  q_profile                  = 2
  q_param1                   = 6.0
  q_param2                   = 0
  q_param3                   = 6.0
  q_param4                   = 0.
  magnetic_drift             = .true.
  perturb_amplitude          = 0.00001
  perturb_choice             = 1
  m                          = 16
  n                          = 8
  !--> Gyroaverage tunable input parameters
  gyroaverage                = .true.
  gyro_Nbpoints              = 8
  TF_ripple                  = .false.
  N_ripple                   = 0,
/

&COLLISION_OPERATOR
  collision_strategy = "NONE" ! ("DEFAULT", "NONE", "V1", "V2", "V3", "EVOLNUSTAR", "MULTISPECIES")
